// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id          Int      @id @default(autoincrement())
  lineUserId  String
  displayName String
  roomId      String
  role        String?
  alive       Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model Room {
  id        String   @id
  mode      String   @default("onenight")
  status    String
  createdAt DateTime @default(now())
}

model Vote {
  id        Int      @id @default(autoincrement())
  roomId    String
  voter     String
  target    String
  createdAt DateTime @default(now())
}
